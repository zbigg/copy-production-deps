{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2018",
        "lib": ["ES2018"],
        "module": "commonjs",
        "outDir": "lib/",
        "sourceMap": false,
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "downlevelIteration": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "include": ["src/*.ts"]
}
